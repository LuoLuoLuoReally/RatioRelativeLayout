<?xml version="1.0" encoding="utf-8"?>
<com.example.meitu.layouttest.RatioRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:adaptType="fitY"
    app:layout_heightSpec="1920"
    app:layout_widthSpec="1080">

    <ImageView
        android:id="@+id/iv_advert_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        app:layout_ratioHeight="315"/>

    <ImageView
        android:id="@+id/iv_hwbusiness_ad_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#983"
        android:layout_above="@+id/iv_advert_bottom"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/v_call_action_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hwbusiness_ad_background"
        android:background="#55000000"
        app:layout_ratioHeight="220"/>


    <ImageView
        android:id="@+id/iv_hwbusiness_ad_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:background="#fff"
        app:layout_ratioHeight="140"
        app:layout_ratioMarginTop="160"
        app:layout_ratioWidth="140"/>

    <TextView
        android:id="@+id/tv_hwbusiness_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111111111111111111111111111"
        android:layout_below="@+id/iv_hwbusiness_ad_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="7"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_ratioWidth="960"
        app:layout_ratioMarginTop="40"/>


    <ImageView
        android:id="@+id/iv_hwbusiness_ad_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hwbusiness_ad_title"
        android:layout_centerHorizontal="true"
        app:aspectRatio="1.9"
        android:background="#fff"
        app:layout_ratioMarginTop="40"
        app:layout_ratioWidth="960"/>

    <TextView
        android:id="@+id/tv_hwbusiness_ad_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111111111111111111111111111111111111111111111111111111111111"
        android:layout_below="@+id/iv_hwbusiness_ad_cover"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxHeight="150dp"
        android:paddingBottom="5dp"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="7"
        android:textSize="13sp"
        app:layout_ratioWidth="960"
        app:layout_ratioMarginTop="60"/>

    <TextView
        android:id="@+id/tv_hwbusiness_ad_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/iv_advert_bottom"
        android:textStyle="bold"
        android:text="Install"
        app:layout_ratioWidth="960"
        app:layout_ratioHeight="220"/>

    <View
        android:id="@+id/iv_hwbusiness_ad_platform_choice"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/iv_hwbusiness_ad_cover"
        android:layout_alignTop="@+id/iv_hwbusiness_ad_cover"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">
    </View>


    <ImageView
        android:id="@+id/iv_ad_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>


</com.example.meitu.layouttest.RatioRelativeLayout>
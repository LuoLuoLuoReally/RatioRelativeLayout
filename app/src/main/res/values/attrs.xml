<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioLayout">
        <attr name="heightSum" format="integer" />
        <attr name="widthSum" format="integer" />
    </declare-styleable>

    <declare-styleable name="RatioLayout_Layout">
        <attr name="aspect_ratio" format="float" />
        <attr name="android:layout_gravity" />
        <attr name="x_start" format="integer" />
        <attr name="x_end" format="integer" />
        <attr name="y_start" format="integer" />
        <attr name="y_end" format="integer" />
    </declare-styleable>

    <declare-styleable name="RatioRelativeLayout">
    <attr name="widthPiece" format="integer" />
    <attr name="heightPiece" format="integer" />
</declare-styleable>

    <declare-styleable name="RatioRelativeLayout_Layout">
        <attr name="aspectRatio" format="string" />
        <attr name="ratioWidth" format="integer" />
        <attr name="ratioHeight" format="integer" />
        <attr name="ratio_marginLeft" format="integer" />
        <attr name="ratio_marginRight" format="integer" />
        <attr name="ratio_marginTop" format="integer" />
        <attr name="ratio_marginBottom" format="integer" />
    </declare-styleable>


</resources>
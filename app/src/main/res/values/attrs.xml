<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioRelativeLayout">
        <attr name="widthSpec" format="integer"/>
        <attr name="heightSpec" format="integer"/>
        <attr name="adaptType">
            <enum name="fitXY" value="0"/>
            <enum name="fitX" value="1"/>
            <enum name="fitY" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RatioRelativeLayout_Layout">
        <attr name="aspectRatio" format="string"/>
        <attr name="layout_ratioWidth" format="integer"/>
        <attr name="layout_ratioHeight" format="integer"/>
        <attr name="layout_ratioMarginLeft" format="integer"/>
        <attr name="layout_ratioMarginRight" format="integer"/>
        <attr name="layout_ratioMarginTop" format="integer"/>
        <attr name="layout_ratioMarginBottom" format="integer"/>
    </declare-styleable>


</resources>